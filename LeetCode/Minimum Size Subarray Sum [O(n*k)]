class Solution {
    public int minSubArrayLen(int target, int[] nums) 
    {
        int left=0, right=0, sum=0, ans=Integer.MAX_VALUE;
        
        while(right<nums.length)
        {
            
            sum = sum+nums[right];
            while(sum>=target)
            {
                int len = right-left+1;
                ans = Math.min(ans,len);
                sum = sum - nums[left++]; 
            }
            ++right;            
        }
        if(ans == Integer.MAX_VALUE)return(0);
        else return(ans);
    }
}
