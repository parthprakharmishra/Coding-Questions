class Solution {
    public int maxProfit(int[] prices) 
    {
        int max=-1, min=Integer.MAX_VALUE;
        int p=0;
        
        for(int i=0;i<prices.length;++i)
        {
            if(prices[i]<min)
            {
                min = prices[i];
                max = prices[i];
            }
            if(prices[i]>max)
            {
                max = prices[i];
                p=Math.max(max-min, p);
            }
            
        }
        return(p);
    }
}
