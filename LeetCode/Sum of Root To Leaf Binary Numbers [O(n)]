/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    int s=0, s2=0;
    String st="";
    public int sumRootToLeaf(TreeNode root) {
        return(sumRootToLeaf1(root, 0));
    }
    
    public int sumRootToLeaf1(TreeNode root, int s) {
        
        if(root==null)return(0);
        s=s*2 + root.val;
        if(root.left==null && root.right==null)return(s);
        return(sumRootToLeaf1(root.left, s) + sumRootToLeaf1(root.right, s));

    }
}
